{#views/charactersheets/meikyudays/index.html.twig#}
{% extends 'charactersheets/meikyudays/base.html.twig' %}
{% block title %}{{ pageName }} | {{ commonVariables.siteName }}{% endblock %}
{% block page_header %}{{ pageName }} | {{ commonVariables.siteName }}{% endblock %}
{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}

{% block body %}
    <div class="form-group row">
        <div class="col-sm-12">
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th class="col-sm-6">名前</th>
                        <th>レベル</th>
                        <th>クラス</th>
                        <th>性別</th>
                        <th>年齢</th>
                        <th>作成者</th>
                        <th></th>
                    </tr>
                    {% for sheet in sheets %}
                        <tr>
                            <td>{{ sheet.character_name|e }}</td>
                            <td>{{ sheet.level|e }}</td>
                            <td>{{ sheet.class|e }}</td>
                            <td>{{ sheet.gender|e }}</td>
                            <td>{{ sheet.age|e }}</td>
                            <td>{{ sheet.player_name|e }}</td>
                            <td><a href="{{ app.request.baseUrl }}/charactersheets/meikyudays/update/{{ sheet.hash }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
